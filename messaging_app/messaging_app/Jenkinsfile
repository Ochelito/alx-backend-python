pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS = credentials('github-creds')
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
        REPO_URL = "https://github.com/<your-username>/alx-backend-python.git"
        IMAGE_NAME = "<your-dockerhub-username>/messaging_app"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo "üîπ Checking out code..."
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: "${REPO_URL}"
            }
        }

        stage('Set Up Python Environment') {
            steps {
                echo "üîπ Installing Python dependencies..."
                sh '''
                    pip3 install --upgrade pip
                    pip3 install pytest pytest-html
                    pip3 install -r messaging_app/requirements.txt || echo "No requirements.txt found"
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo "üîπ Running pytest..."
                sh '''
                    cd messaging_app
                    pytest --html=report.html --self-contained-html || echo "Tests finished with warnings"
                '''
            }
        }

        stage('Archive Test Report') {
            steps {
                echo "üîπ Archiving pytest report..."
                archiveArtifacts artifacts: 'messaging_app/report.html', fingerprint: true
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Building Docker image..."
                sh '''
                    docker build -t ${IMAGE_NAME}:latest -f messaging_app/Dockerfile .
                '''
            }
        }

        stage('Login to Docker Hub') {
            steps {
                echo "üîê Logging into Docker Hub..."
                sh '''
                    echo "${DOCKERHUB_CREDENTIALS_PSW}" | docker login \
                        -u "${DOCKERHUB_CREDENTIALS_USR}" --password-stdin
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                echo "üì§ Pushing Docker image to Docker Hub..."
                sh '''
                    docker push ${IMAGE_NAME}:latest
                '''
            }
        }
    }

    post {
        always {
            echo "‚úÖ Pipeline Finished."
        }
    }
}
